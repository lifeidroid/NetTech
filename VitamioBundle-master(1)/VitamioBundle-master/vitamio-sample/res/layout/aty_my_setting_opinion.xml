<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/White" >

        <ImageView
            android:id="@+id/iv_aty_opinion_cancel_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/tv_aty_opinion_cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_aty_opinion_cancel_logo"
            android:text="@string/cancel"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Bule" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈 "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Bule" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/tv_aty_opinion_send"
            android:text="提交 "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Bule" />
    </RelativeLayout>
	<EditText 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="在这里提出您的宝贵意见吧..."
	    android:layout_margin="10dp"
	    android:id="@+id/et_aty_opinion_content"
	    android:lines="6"
	    android:gravity="top"
	    android:paddingLeft="3dp "
	    android:background="@drawable/cell_shape"/>

</LinearLayout>
