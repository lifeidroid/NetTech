<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dlg_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="课程笔记"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Bule" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_Blank" />

    <EditText
        android:id="@+id/et_dlg_send_course_note_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:gravity="top"
        android:hint="请在这里留下您的笔记..."
        android:lines="4"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/light_Blank" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dlg_send_course_note_send"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dlg_send_btn_selector"
            android:gravity="center"
            android:text="提交"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Bule" />

        <TextView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/light_Blank" />

        <TextView
            android:id="@+id/tv_dlg_send_course_note_cancel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dlg_cancel_btn_selector"
            android:gravity="center"
            android:text="取消"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Bule" />
    </LinearLayout>

</LinearLayout>