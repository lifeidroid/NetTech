<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cell_shape"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_cell_courselogo"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_margin="1dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
         >

        <TextView
            android:id="@+id/tv_cellcourse_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:lines="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Blank" />

        <TextView
            android:id="@+id/tv_cellcourse_techname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cellcourse_name"
            android:textColor="@color/light_Blank" />

        <RatingBar
            android:id="@+id/rb_cellcourse_grade"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tv_cellcourse_studnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/light_Blank" />
    </RelativeLayout>



</LinearLayout>