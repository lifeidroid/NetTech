<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="@color/Bule" />

            <corners android:bottomLeftRadius="5dip" android:topLeftRadius="5dip" />
        </shape></item>
    <item android:state_checked="false"><shape android:shape="rectangle">
            <solid android:color="@color/White" />

            <corners android:bottomLeftRadius="5dip" android:topLeftRadius="5dip" />

            <stroke android:width="0.3dip" android:color="@color/Bule" />
        </shape></item>

</selector>